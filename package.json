    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "browserify": "^17.0.1",
    "canvas": "3.0.0-rc2",
    "canvasutil": "0.0.4",
    "colors": "^1.4.0",
    "express": "^4.21.1",
    "htmlparser2": "^9.1.0",
    "rollup": "^4.24.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "sinon": "^19.0.2",
    "standard": "^17.1.2",
    "tap": "^21.0.1"
